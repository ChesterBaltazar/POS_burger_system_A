<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
<script>
    // For redirecting Admin to Admin only
    const role = localStorage.getItem("role");
    if (role === "user") {
        window.location.href = "/Dashboard/user-dashboard";
    }

    document.querySelectorAll('.menu-item').forEach(item => {
        item.addEventListener('click', function(e) {
            // Prevent navigation if it's a placeholder link
            if (this.querySelector('a').getAttribute('href') === '#') {
                e.preventDefault();
            }
            
            document.querySelectorAll('.menu-item').forEach(i => {
                i.classList.remove('active');
            });
            
            this.classList.add('active');
            
            const itemText = this.textContent.trim().split(' ')[1] || this.textContent.trim();
            if(itemText !== 'Dashboard') {
                document.querySelector('.page-title').textContent = itemText;
            } else {
                document.querySelector('.page-title').textContent = 'Dashboard';
            }
        });
    });
    
    // Logout functionality
    document.querySelector('.logout-btn').addEventListener('click', function() {
        if(confirm('Are you sure you want to logout?')) {
            // Clearing the local storage
            localStorage.clear();
            // Back to login page
            window.location.href = '/';
        }
    });

    function updateDate() {    
        const now = new Date();    
        const options = {         
            weekday: 'long',         
            year: 'numeric',         
            month: 'long',         
            day: 'numeric'     
        };    
        const formattedDate = now.toLocaleDateString('en-US', options);    
        document.getElementById('current-date').textContent = formattedDate;
    }
    
    updateDate();
    
    // ========== DASHBOARD DATA FETCHING ==========
    
    // Format currency with ‚Ç± Philippine Peso
    function formatCurrency(amount) {
        return '‚Ç±' + parseFloat(amount).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,');
    }
    
    // Format date/time nicely
    function formatTime(dateString) {
        const date = new Date(dateString);
        return date.toLocaleTimeString([], { 
            hour: '2-digit', 
            minute: '2-digit',
            hour12: true 
        });
    }
    
    // Load dashboard data from API
    async function loadDashboardData() {
        try {
            const response = await fetch('/api/dashboard/stats');
            
            if (!response.ok) {
                throw new Error(`Failed to fetch data: ${response.status}`);
            }
            
            const result = await response.json();
            
            if (result.success) {
                updateDashboard(result.data);
            } else {
                throw new Error(result.message || 'Failed to load dashboard');
            }
        } catch (error) {
            console.error('Error loading dashboard:', error);
            // Show empty dashboard if error
            updateDashboard({
                totalSales: 0,
                netProfit: 0,
                ordersToday: 0,
                totalCustomers: 0,
                recentSales: [],
                lowStockAlerts: []
            });
        }
    }
    
    // Update dashboard UI with data
    function updateDashboard(data) {
        // 1. Update metric cards
        const metricValues = document.querySelectorAll('.metric-value');
        if (metricValues.length >= 4) {
            metricValues[0].textContent = formatCurrency(data.totalSales || 0);
            metricValues[1].textContent = formatCurrency(data.netProfit || 0);
            metricValues[2].textContent = data.ordersToday || 0;
            metricValues[3].textContent = data.totalCustomers || 0;
        }
        
        // 2. Update recent sales (4 items)
        const salesItems = document.querySelectorAll('.sales-item');
        
        // Loop through all 4 sales items
        for (let i = 0; i < salesItems.length; i++) {
            const sale = data.recentSales?.[i];
            const item = salesItems[i];
            
            if (sale && item) {
                // Show and update item
                item.style.display = 'flex';
                
                // Update order info
                const orderInfo = item.querySelector('.order-info');
                if (orderInfo) {
                    const h4 = orderInfo.querySelector('h4');
                    const p = orderInfo.querySelector('p');
                    const timeSpan = orderInfo.querySelector('.order-time');
                    
                    if (h4) h4.textContent = sale.orderNumber || '#N/A';
                    if (p) p.textContent = sale.customerName || 'Walk-in Customer';
                    if (timeSpan) timeSpan.textContent = formatTime(sale.createdAt);
                }
                
                // Update amount
                const amountElement = item.querySelector('.order-amount');
                if (amountElement) {
                    amountElement.textContent = formatCurrency(sale.totalAmount || 0);
                }
                
                // Update status
                const statusElement = item.querySelector('.order-status');
                if (statusElement) {
                    statusElement.textContent = sale.status || 'completed';
                    statusElement.className = `order-status status-${sale.status || 'completed'}`;
                }
            } else {
                // Hide empty items
                item.style.display = 'none';
            }
        }
        
        // 3. Update low stock alerts (3 items)
        const alertItems = document.querySelectorAll('.alert-item');
        
        // Loop through all 3 alert items
        for (let i = 0; i < alertItems.length; i++) {
            const alert = data.lowStockAlerts?.[i];
            const item = alertItems[i];
            
            if (alert && item) {
                // Show and update item
                item.style.display = 'flex';
                
                const alertText = item.querySelector('.alert-text');
                if (alertText) {
                    const h5 = alertText.querySelector('h5');
                    const p = alertText.querySelector('p');
                    
                    if (h5) h5.textContent = alert.name || 'Unknown Item';
                    if (p) p.textContent = 
                        `Only ${alert.currentStock || 0} left in stock (Minimum: ${alert.minStock || 10})`;
                }
            } else {
                // Hide empty items
                item.style.display = 'none';
            }
        }
    }
    
    // Auto-refresh every 30 seconds
    let refreshInterval;
    
    function startAutoRefresh() {
        refreshInterval = setInterval(loadDashboardData, 30000);
    }
    
    function stopAutoRefresh() {
        if (refreshInterval) {
            clearInterval(refreshInterval);
        }
    }
    
    // Initialize when page loads
    document.addEventListener('DOMContentLoaded', () => {
        loadDashboardData();
        startAutoRefresh();
        
        // Clean up when leaving page
        window.addEventListener('beforeunload', stopAutoRefresh);
    });
    
    // Manual refresh function
    window.refreshDashboard = function() {
        loadDashboardData();
    };

</script>
