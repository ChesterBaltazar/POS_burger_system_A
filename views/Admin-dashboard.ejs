        </div>
        
        <!-- Stock Request Panel -->
        <div class="stock-request-panel">
            <div class="stock-request-header">
                <h3>All Stock Requests</h3>
                <span id="pendingCountBadge" class="stock-request-badge" style="display: none;">0</span>
            </div>
            <div id="stockRequestsContainer">
                <div class="no-requests">No requests made</div>
            </div>
        </div>
    </div>

