<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Angelo's Burger POS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/settings-admin.css">
    <style>
    
    </style>
</head>
<body>
    <div id="notificationContainer"></div>
    
    <!-- Sidebar Toggle Button (only shows on mobile) -->
    <button class="sidebar-toggle" id="sidebarToggle" aria-label="Toggle Sidebar">
        <i class="bi bi-list"></i>
    </button>
    
    <!-- Overlay for mobile when sidebar is open -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <div class="sidebar">
        <img src="/css/Angelo's_Burger.jpg" alt="Angelo's Burger Logo" id="logo">
        <h1 class="divider"></h1>
        <div class="menu-top">
            <div class="menu-item">
                <a href="/Dashboard/Admin-dashboard">
                    <!-- Dashboard Icon from Flaticon -->
                    <img src="https://cdn-icons-png.flaticon.com/512/1828/1828765.png" alt="Dashboard" class="menu-icon">
                    Dashboard
                </a>
            </div>
            <div class="menu-item"> 
                <a href="/Dashboard/Admin-dashboard/Inventory">
                    <!-- Inventory Icon from Flaticon -->
                    <img src="https://cdn-icons-png.flaticon.com/512/8229/8229337.png" alt="Inventory" class="menu-icon">
                    Inventory
                </a>
            </div>
            <div class="menu-item"> 
                <a href="/Dashboard/Admin-dashboard/Reports">
                    <!-- Reports Icon from Flaticon -->
                    <img src="https://cdn-icons-png.flaticon.com/512/3286/3286169.png" alt="Reports" class="menu-icon">
                    Reports
                </a>
            </div>
        </div>

        <div class="menu-item active">
            <a href="/Dashboard/Admin-dashboard/Settings">
                <!-- Settings Icon from Flaticon -->
                <img src="https://cdn-icons-png.flaticon.com/512/2099/2099058.png" alt="Settings" class="menu-icon">
                Settings
            </a>
        </div>

        <div class="logout-section">
            <button class="logout-btn">
                <i class="bi bi-box-arrow-right"></i>
                Logout
            </button>
        </div>
    </div>
    
    <div class="main-content">
        <h3 class="Settings" style="color: #6a0dad;">Settings</h3>
        <div class="content-box7">
            <!-- Page Buttons - Only Account Creation and Profile -->
            <div class="pagination-buttons">
                <button class="page-btn active" data-page="account">Account Creation</button>
                <button class="page-btn" data-page="profile">My Profile</button>
            </div>
        </div>
        <br>
        
        <!-- Account Creation Page -->
        <div class="content-box-content active" id="account-box-content">
            <div class="content-box">
                <h4 style="color: #6a0dad; margin-bottom: 20px;">Account Creation</h4>
                <div style="background-color: #f8f9fa; padding: 20px; border-radius: 8px;">
                    <p style="color: #666; margin-bottom: 15px;"></p>
                    <div class="border border-dark p-5 m-3 login-container bg-light rounded">
                        <div class="d-flex align-items-center justify-content-center mb-4">
                        </div>
                        
                        <% if (typeof message !== 'undefined') { %>
                            <p style="color:red;" class="text-center"><%= message %></p>
                        <% } %>

                        <form id="accountForm" action="/Users" method="POST">
                            <div class="mb-3">
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <img src="https://cdn-icons-png.flaticon.com/512/15678/15678795.png" alt="User Icon" width="20" height="20">
                                    </span>
                                    <input type="text" name="name" id="username" class="form-control" placeholder="Username" required />
                                </div>
                            </div>
                           
                           <div class="mb-3">
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <img src="https://cdn-icons-png.flaticon.com/512/482/482624.png" alt="Password Icon" width="20" height="20">
                                    </span>
                                    <input type="password" name="password" id="passwordField" class="form-control" placeholder="Password" required />
                                    <button class="btn btn-outline-secondary password-toggle" type="button" id="togglePassword">
                                        <img src="https://cdn-icons-png.flaticon.com/512/709/709612.png" alt="Show Password" width="18" height="18" id="eyeIcon">
                                    </button>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <img src="https://cdn-icons-png.flaticon.com/512/1570/1570102.png" alt="Role Icon" width="20" height="20">
                                    </span>
                                    <select name="role" id="role" class="form-select">
                                        <option value="user" selected>Staff</option>
                                        <option value="admin">Admin</option>
                                    </select>
                                </div>
                            </div>
                            <button type="submit" style="color: white; background-color: orange;" class="p-2 rounded w-100">Sign up</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Profile Page -->
        <div class="content-box-content" id="profile-box-content">
            <div class="content-box">
                <h4 style="color: #6a0dad; margin-bottom: 20px;">My Profile</h4>
                
                <!-- Profile Card -->
                <div class="profile-card">
                    <div class="profile-header">
                        <div class="profile-icon">
                            <img src="https://cdn-icons-png.flaticon.com/512/1144/1144760.png" alt="User Profile">
                        </div>
                        <div class="profile-info">
                            <h4 id="profile-username">Loading</h4>
                            <p id="profile-email">Angelo's Burger</p>
                        </div>
                    </div>
                    
                    <div class="profile-details">
                        <div class="detail-row">
                            <span class="detail-label">username:</span>
                            <span class="detail-value" id="profile-username-display">--</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">role:</span>
                            <span class="detail-value">
                                <span id="profile-role-badge" class="role-badge">Loading</span>
                            </span>
                        </div>
                    </div>
                </div>
                
                <!-- Refresh Button -->
                <div class="profile-actions-container">
                    <button class="btn btn-outline-primary" id="refreshProfileBtn">
                        <img src="https://cdn-icons-png.flaticon.com/512/2997/2997933.png" alt="Refresh" width="18" height="18" class="me-2">
                        refresh 
                    </button>
                </div>
            </div>
        </div>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
<script src="/js/settings.js"></script>
</body>
</html>