<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Angelo's Burger POS</title>
    <link rel="stylesheet" href="/css/POS.css">
    <style>
       
    </style>
</head>
<body>
    <!-- Your original POS interface remains unchanged -->
    <div class="sidebar">
        <div class="logo-section">
            <div class="logo-title">Angelo's</div>
            <div class="logo-subtitle">Burger</div>
        </div>

        <div class="menu-top">
            <div class="menu-item active">POS</div>
            <div class="menu-item"> 
                <a href="/Dashboard/User-dashboard/User-dashboard/Inventory/POS/user-Inventory">Inventory</a>
            </div>
        </div>

        <div class="menu-item">
            <a href="/Dashboard/User-dashboard/user-Settings">Settings</a>
        </div>

        <div class="logout-section">
            <button class="logout-btn">Logout</button>
        </div>
    </div>
    
    <div class="main-content">
        <h1 class="page-title">POS</h1>
        
        <div class="pos-container">
            <!-- Menu Items Section -->
            <div class="menu-section">
                <h2 class="section-title">Menu Items</h2>
                
                <!-- Burgers Section -->
                <div class="category-title">Burgers</div>
                <div class="menu-grid">
                    <div class="menu-card" data-name="Beef Burger" data-price="40.00">
                        <div class="item-name">Beef Burger B1T1</div>
                    </div>
                    <div class="menu-card" data-name="Pork Burger" data-price="40.00">
                        <div class="item-name">Pork Burger B1T1</div>
                    </div>
                </div>
                
                <!-- Hotdogs and Egg Section -->
                <div class="category-title">Hotdogs & Sausages</div>
                <div class="menu-grid">
                    <div class="menu-card" data-name="Cheezy Hotdog" data-price="56.00">
                        <div class="item-name">Cheezy Hotdog B1T1</div>
                    </div>
                    <div class="menu-card" data-name="chicken Franks" data-price="56.00">
                        <div class="item-name">chicken Franks B1T1</div>
                    </div>
                    <div class="menu-card" data-name="Tender Juicy Hotdog" data-price="48.00">
                        <div class="item-name">Tender Juicy Hotdog B1T1</div>
                    </div>
                    <div class="menu-card" data-name="Ham" data-price="40.00">
                        <div class="item-name">Ham B1T1</div>
                    </div>
                    <div class="menu-card" data-name="Eggs" data-price="44.00">
                        <div class="item-name">Eggs B1T1</div>
                    </div>
                    <div class="menu-card" data-name="Holiday Footlong" data-price="50.00">
                        <div class="item-name">Holiday Footlong B1T1</div>
                    </div>
                    <div class="menu-card" data-name="Hangarian Sausage" data-price="62.00">
                        <div class="item-name">Hangarian Sausage B1T1</div>
                    </div>
                </div>
                
                <!-- Drinks Section -->
                <div class="category-title">Drinks</div>
                <div class="menu-grid">
                    <div class="menu-card" data-name="Mineral Water" data-price="20.00">
                        <div class="item-name">Mineral Water</div>
                    </div>
                    <div class="menu-card" data-name="Soft Drinks" data-price="25.00">
                        <div class="item-name">Soft Drinks</div>
                    </div>
                    <div class="menu-card" data-name="Zesto" data-price="18.00">
                        <div class="item-name">Zesto</div>
                    </div>
                    <div class="menu-card" data-name="Sting" data-price="25.00">
                        <div class="item-name">Sting</div>
                    </div>
                    <div class="menu-card" data-name="Cobra" data-price="30.00">
                        <div class="item-name">Cobra</div>
                    </div>
                </div>

                <!-- Add-ons Section -->
                <div class="category-title">Add-ons</div>
                <div class="menu-grid">
                    <div class="menu-card" data-name="Slice Cheese" data-price="6.00">
                        <div class="item-name">Slice Cheese</div>
                    </div>
                    <div class="menu-card" data-name="Egg" data-price="15.00">
                        <div class="item-name">Egg</div>
                    </div>
                </div>
            </div>
            
            <!-- Current Order Section -->
            <div class="order-section">
                <h2 class="section-title">Current Order</h2>
                <div style="margin-bottom: 10px; color: #6a0dad; font-size: 14px; font-weight: bold;">
                    Next Order #: <span id="nextOrderNumber">Loading...</span>
                </div>
                <div class="order-items" id="orderItems">

                </div>
                
                <div class="order-summary">
                    <div class="summary-row">
                        <span>Total: </span>
                        <span id="total">₱0.00</span>
                    </div>
                    <div class="total-row">
                        <span>Total Payment:</span>
                        <span id="totalpayment">₱0.00</span>
                    </div>  
                    
                    <div class="cash-received-section" id="cashSection">
                        <div class="summary-row">
                            <span>Cash Received: </span>
                            <span id="cashReceived">₱0.00</span>
                        </div>
                        <div class="summary-row">
                            <span>Change: </span>
                            <span id="change">₱0.00</span>
                        </div>
                    </div>
                    
<!-- Order summary section -->
<div class="order-summary">
    <!-- ... other order summary content ... -->
    
    <!-- Complete Order Button -->
    <button class="complete-btn" id="completeOrder">
        <i class="bi bi-check-circle"></i>
        Accept
    </button>
    
    <!-- Print and Reset buttons container -->
    <div class="print-reset-container">
        <!-- Print Button -->
        <button class="print-btn" id="printReceipt" disabled>
            <i class="bi bi-printer"></i>
            Print
        </button>
        
        <!-- Reset Button -->
        <button id="resetOrderBtn" class="reset-order-btn">
            <i class="bi bi-arrow-counterclockwise"></i>
            Reset Order No.
        </button>
    </div>
</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Payment Modal (Original) -->
    <div class="modal" id="cashModal">
        <div class="modal-content">
            <div class="modal-title" id="modalTitle">Enter Cash Payment: </div>
            <input type="number" class="modal-input" id="cashInput" placeholder="Enter amount" step="0.01" min="0">
            <div class="modal-buttons">
                <button class="modal-btn confirm" id="confirmCash">Accept</button>
                <button class="modal-btn cancel" id="cancelCash">Exit</button>
                <button class="modal-btn gcash" id="payment-method">Other</button>
            </div>
        </div>
    </div>

    <!-- SIMPLE GCash Modal -->
    <div class="modal" id="gcashModal">
        <div class="modal-content gcash-modal-content">
            <div class="gcash-text">GCash</div>
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/47/Gcash-logo.svg/2560px-Gcash-logo.svg.png" 
                 alt="GCash Logo" 
                 class="gcash-img">
            <div class="modal-buttons">
                <button class="modal-btn cancel" id="closeGCash">Close</button>
            </div>
        </div>
    </div>

    <!-- The Receipts Modal -->
    <div class="modal" id="receiptModal">
        <div class="modal-content" style="max-width: 350px;">
            <div class="modal-title">Receipt Preview</div>
            <div id="receiptPreview" style="font-family: monospace; background: #f9f9f9; padding: 15px; border-radius: 5px; max-height: 400px; overflow-y: auto;">
                <!-- The Receipt Modal Action -->
            </div>
            <div class="modal-buttons" style="margin-top: 20px;">
                <button class="modal-btn confirm" id="printNow">Accept</button>
                <button class="modal-btn cancel" id="closeReceipt">Close</button>
            </div>
        </div>
    </div>

<script src="/js/POS.js"></script>
</body>
</html>