<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- for responsiveness -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            background-color: purple;
        }
        .login-container {
            max-width: 400px; 
            width: 90%;      
        }
        #Burger {
            color: purple;          
            border: 2px solid rgba(255, 255, 255, 0.644);
            padding: 5px 10px;       
            display: inline-block;   
            border-radius: 5px;      
            font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
            margin-left: 5px;
        }
         
    .password-toggle {
        padding: 0.375rem 0.75rem;
        min-width: 44px; 
        transition: all 0.2s ease;
    }
    
    @media (max-width: 576px) {
        .password-toggle {
            padding: 0.375rem 0.5rem;
            min-width: 40px;
        }
        .password-icon {
            width: 16px;
            height: 16px;
        }
    }
    
    @media (min-width: 577px) and (max-width: 768px) {
        .password-toggle {
            padding: 0.375rem 0.625rem;
        }
    }
    </style>
</head>
<body class="d-flex justify-content-center align-items-center">

    <div class="border border-dark p-5 m-3 login-container bg-light rounded">
        <div class="d-flex align-items-center justify-content-center mb-4">
            <img src="https://cdn-icons-png.flaticon.com/512/3075/3075977.png" alt="Burger" class="me-3" style="width: 90px; height: 90px;">
            <h1 class="mb-0"><b><span class="text-warning">Angelo's</span><span id="Burger">Burger</span></b></h1>
        </div>
        <% if (typeof message !== 'undefined') { %>
            <p style="color:red;" class="text-center"><%= message %></p>
        <% } %>

        <form action="/Users" method="POST">
            <div class="mb-3">
    <label style="font-size: 26px;">Sign up</label>
    <div class="input-group">
        <span class="input-group-text">
            <img src="https://cdn-icons-png.flaticon.com/512/15678/15678795.png" alt="User Icon" width="20" height="20">
        </span>
        <input type="text" name="name" class="form-control" placeholder="Username" required />
    </div>
</div>
   
   <div class="mb-3">
    <div class="input-group">
        <span class="input-group-text">
            <img src="https://cdn-icons-png.flaticon.com/512/482/482624.png" alt="Password Icon" width="20" height="20">
        </span>
        <input type="password" name="password" id="passwordField" class="form-control" placeholder="Password" required />
        <button class="btn btn-outline-secondary password-toggle" type="button" id="togglePassword">
            <img src="https://cdn-icons-png.flaticon.com/512/709/709612.png" alt="Show Password" width="18" height="18" id="eyeIcon">
        </button>
    </div>
</div>
            <div class="mb-3">
    <div class="input-group">
        <span class="input-group-text">
            <img src="https://cdn-icons-png.flaticon.com/512/1570/1570102.png" alt="Role Icon" width="20" height="20">
        </span>
        <select name="role" class="form-select">
            <option value="user" selected>Staff</option>
            <option value="admin">Admin</option>
        </select>
    </div>
</div>
            <button type="submit" style="color: white; background-color: orange;"  class="p-2 rounded w-100">Sign up</button>
        </form>
<p class="mt-3 text-center">
    Already have an account? <a href="/">Sign in</a>
</p>
<script>
    
    document.getElementById('togglePassword').addEventListener('click', function() {
        const passwordInput = document.getElementById('passwordField');
        const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordInput.setAttribute('type', type);
        
        this.querySelector('i').classList.toggle('bi-eye');
        this.querySelector('i').classList.toggle('bi-eye-slash');
    });
</script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" crossorigin="anonymous"></script>
</body>
</html>