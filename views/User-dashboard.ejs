    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script>
        // For redirecting Admin to Admin only
        const role = localStorage.getItem("role");
        if (role == "admin") {
            window.location.href = "/Dashboard/Admin-dashboard";
        }

        document.querySelectorAll('.menu-item').forEach(item => {
            item.addEventListener('click', function(e) {
                document.querySelectorAll('.menu-item').forEach(i => {
                    i.classList.remove('active');
                });
                
                this.classList.add('active');
                
                const itemText = this.textContent.trim().split(' ')[1] || this.textContent.trim();
                if(itemText !== 'Dashboard') {
                    document.querySelector('.page-title').textContent = itemText;
                } else {
                    document.querySelector('.page-title').textContent = 'Dashboard';
                }
            });
        });
        
        // Logout functionality
        document.querySelector('.logout-btn').addEventListener('click', function() {
            if(confirm('Are you sure you want to logout?')) {
                // Clearing the local storage
                localStorage.clear();
                // Back to login page
                window.location.href = '/';
            }
        });

        function updateDate() {    
            const now = new Date();    
            const options = {         
                weekday: 'long',         
                year: 'numeric',         
                month: 'long',         
                day: 'numeric'     
            };    
            const formattedDate = now.toLocaleDateString('en-US', options);    
            document.getElementById('current-date').textContent = formattedDate;
        }
        
        updateDate();
        
        setInterval(() => {
            const ordersToday = document.querySelector('.metric-card:nth-child(3) .metric-value');
            const currentOrders = parseInt(ordersToday.textContent);
            ordersToday.textContent = currentOrders + Math.floor(Math.random() * 3);
        }, 5000);
    </script>
