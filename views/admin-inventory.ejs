        // Function to update inventory statistics
        window.updateInventoryStats = function() {
            const rows = document.querySelectorAll('#itemsTable tr.draggable-row');
            let totalProducts = rows.length;
            let inStock = 0;
            let lowStock = 0;
            let outOfStock = 0;
            
            rows.forEach(row => {
                const quantity = parseInt(row.getAttribute('data-item-quantity') || row.cells[4]?.textContent || 0);
                
                if (quantity === 0) {
                    outOfStock++;
                } else if (quantity <= 5) { // Low stock threshold set to 5
                    lowStock++;
                } else {
                    inStock++;
                }
            });
            
            // Update the stats display
            document.getElementById('totalProducts').textContent = totalProducts;
            document.getElementById('inStock').textContent = inStock;
            document.getElementById('lowStock').textContent = lowStock;
            document.getElementById('outOfStock').textContent = outOfStock;
            
            // Check for out of stock items
            if (outOfStock > 0) {
                updateOutOfStockItemsList();
            }
        };

        // Update out of stock items list
        window.updateOutOfStockItemsList = function() {
            const rows = document.querySelectorAll('#itemsTable tr.draggable-row');
            outOfStockItems = [];
            
            rows.forEach(row => {
                const quantity = parseInt(row.getAttribute('data-item-quantity') || row.cells[4]?.textContent || 0);
                if (quantity === 0) {
                    const itemName = row.getAttribute('data-item-name') || row.cells[1]?.textContent || 'Unknown';
                    const category = row.cells[3]?.querySelector('.category-badge')?.textContent || 'Unknown';
                    
