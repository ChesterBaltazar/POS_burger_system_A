            padding: 8px 0;
            min-width: 200px;
            max-width: 300px;
            z-index: 1001;
            margin-top: 5px !important;
            max-height: 300px;
            overflow-y: auto;
            -webkit-overflow-scrolling: touch;
            transform: none !important;
            will-change: transform;
            display: none;
        }

        .dropdown-menu.show {
            display: block !important;
        }

        .dropdown-item {
            color: #333 !important;
            text-decoration: none !important;
            padding: 14px 20px !important;
            font-size: 16px !important;
            display: block;
            background: none !important;
            border: none !important;
            width: 100%;
            text-align: left;
            transition: all 0.2s;
            margin: 2px 0;
            cursor: pointer;
            -webkit-tap-highlight-color: transparent;
            touch-action: manipulation;
            white-space: normal;
            word-break: break-word;
            line-height: 1.4;
        }

        .dropdown-item:hover {
            background-color: #f8f9fa !important;
            color: #6a0dad !important;
            padding-left: 25px !important;
        }

        .dropdown-item.active {
            background-color: #6a0dad !important;
            color: white !important;
        }

        .dropdown-item.active:hover {
            background-color: #7b1fa2 !important;
            color: white !important;
            padding-left: 20px !important;
        }

        .qty-input {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            margin: 15px 0;
            padding: 10px;
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            border-radius: 6px;
        }

        .qty-count {
            padding: 12px 16px;
            background-color: #6a0dad;
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 18px;
            font-weight: bold;
            transition: background-color 0.3s;
            min-width: 50px;
            -webkit-tap-highlight-color: transparent;
            touch-action: manipulation;
        }

        .qty-count:hover {
            background-color: #7b1fa2;
        }

        .product-qty {
            width: 100%;
            padding: 12px;
            text-align: center;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 18px;
            box-sizing: border-box;
            -moz-appearance: textfield;
            touch-action: manipulation;
        }


        .product-qty::-webkit-outer-spin-button,
        .product-qty::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }


        .status-badge {
            padding: 10px 18px;
            border-radius: 20px;
            font-size: 15px;
            font-weight: 600;
            white-space: nowrap;
            display: inline-block;
            text-align: center;
            min-width: 120px;
        }

        .status-instock {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .status-lowstock {
            background-color: #fff3cd;
            color: #856404;
            border: 1px solid #ffeaa7;
        }

        .status-outofstock {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }


        .action-buttons {
            display: flex;
            gap: 10px;
            flex-wrap: nowrap;
            justify-content: flex-start;
            align-items: center;
        }

        .btn-action {
            padding: 12px 18px;
            font-size: 15px;
            white-space: nowrap;
            border-radius: 6px;
            border: 1px solid #ddd;
            background-color: white;
            color: #333;
            cursor: pointer;
            transition: all 0.2s;
            font-weight: 500;
            -webkit-tap-highlight-color: transparent;
            touch-action: manipulation;
        }

        .btn-action:hover {
            background-color: #f8f9fa;
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            color: black;
        }

        .btn-action.edit {
            background-color: #6a0dad;
            color: white;
            border-color: #6a0dad;
        }

        .btn-action.edit:hover {
            background-color: #7b1fa2;
            border-color: #7b1fa2;
        }

        .btn-action.delete {
            background-color: #dc3545;
            color: white;
            border-color: #dc3545;
        }

        .btn-action.delete:hover {
            background-color: #c82333;
            border-color: #c82333;
        }


        .category-badge {
            padding: 8px 14px;
            border-radius: 8px;
            font-size: 15px;
            white-space: nowrap;
            display: inline-block;
            background-color: #e7e3ff;
            color: #6a0dad;
            border: 1px solid #d1c4e9;
            font-weight: 600;
        }


        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 0;
            table-layout: auto;
        }

        .table th {
            background-color: #f8f9fa;
            color: #6a0dad;
            font-weight: 600;
            padding: 18px 20px;
            text-align: left;
            border-bottom: 2px solid #dee2e6;
            white-space: nowrap;
            font-size: 16px;
            position: sticky;
            top: 0;
            z-index: 10;
        }

        .table td {
            padding: 18px 20px;
            border-bottom: 1px solid #dee2e6;
            vertical-align: middle;
            font-size: 15px;
            word-break: break-word;
            line-height: 1.4;
        }

        .table tbody tr:hover {
            background-color: #f9f9f9;
        }


        .toast {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 18px 24px;
            background-color: #333;
            color: white;
            border-radius: 8px;
            opacity: 0;
            transform: translateY(-20px);
            transition: all 0.3s ease;
            z-index: 10000;
            max-width: 300px;
            word-wrap: break-word;
            pointer-events: none;
            font-size: 16px;
        }

        .toast.show {
            opacity: 1;
            transform: translateY(0);
        }

        .toast.success {
            background-color: #28a745;
        }

        .toast.error {
            background-color: #dc3545;
        }

        .toast.warning {
            background-color: #ffc107;
            color: #333;
        }


        .d-flex.align-items-center.gap-2 {
            display: flex;
            align-items: center;
            gap: 15px;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }

        #searchInput {
            flex: 1;
